<tryton>
    <data>
        <!-- Pagos -->
        <menuitem name="Pagos" parent="menu_corseg_configuration"
            id="menu_corseg_pagos" sequence="15"/>

        <!-- Forma Pago -->
        <record model="ir.ui.view" id="forma_pago_view_form">
            <field name="model">corseg.forma_pago</field>
            <field name="type">form</field>
            <field name="name">forma_pago_form</field>
        </record>
        <record model="ir.ui.view" id="forma_pago_view_tree">
            <field name="model">corseg.forma_pago</field>
            <field name="type">tree</field>
            <field name="name">forma_pago_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_forma_pago_form">
            <field name="name">Forma Pago</field>
            <field name="res_model">corseg.forma_pago</field>
        </record>
        <record model="ir.action.act_window.view" id="act_forma_pago_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="forma_pago_view_tree"/>
            <field name="act_window" ref="act_forma_pago_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_forma_pago_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="forma_pago_view_form"/>
            <field name="act_window" ref="act_forma_pago_form"/>
        </record>

        <menuitem parent="menu_corseg_pagos" sequence="10"
            action="act_forma_pago_form" id="menu_forma_pago_tree"/>

        <record model="ir.model.access" id="access_forma_pago">
            <field name="model" search="[('model', '=', 'corseg.forma_pago')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_forma_pago_admin">
            <field name="model" search="[('model', '=', 'corseg.forma_pago')]"/>
            <field name="group" ref="group_corseg_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <!-- Frecuencia Pago -->
        <record model="ir.ui.view" id="frecuencia_pago_view_form">
            <field name="model">corseg.frecuencia_pago</field>
            <field name="type">form</field>
            <field name="name">frecuencia_pago_form</field>
        </record>
        <record model="ir.ui.view" id="frecuencia_pago_view_tree">
            <field name="model">corseg.frecuencia_pago</field>
            <field name="type">tree</field>
            <field name="name">frecuencia_pago_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_frecuencia_pago_form">
            <field name="name">Frecuencia Pago</field>
            <field name="res_model">corseg.frecuencia_pago</field>
        </record>
        <record model="ir.action.act_window.view" id="act_frecuencia_pago_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="frecuencia_pago_view_tree"/>
            <field name="act_window" ref="act_frecuencia_pago_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_frecuencia_pago_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="frecuencia_pago_view_form"/>
            <field name="act_window" ref="act_frecuencia_pago_form"/>
        </record>

        <menuitem parent="menu_corseg_pagos" sequence="20"
            action="act_frecuencia_pago_form" id="menu_frecuencia_pago_tree"/>

        <record model="ir.model.access" id="access_frecuencia_pago">
            <field name="model" search="[('model', '=', 'corseg.frecuencia_pago')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_frecuencia_pago_admin">
            <field name="model" search="[('model', '=', 'corseg.frecuencia_pago')]"/>
            <field name="group" ref="group_corseg_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>


        <!-- Pago -->
        <record model="ir.ui.view" id="pago_view_form">
            <field name="model">corseg.poliza.pago</field>
            <field name="type">form</field>
            <field name="name">pago_form</field>
        </record>
        <record model="ir.ui.view" id="pago_view_tree">
            <field name="model">corseg.poliza.pago</field>
            <field name="type">tree</field>
            <field name="name">pago_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_pago_form">
            <field name="name">Pagos</field>
            <field name="res_model">corseg.poliza.pago</field>
        </record>
        <record model="ir.action.act_window.view" id="act_pago_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="pago_view_tree"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_pago_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="pago_view_form"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>

        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_borrador">
            <field name="name">Borradores</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', '=', 'borrador')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_procesado">
            <field name="name">Procesados</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state', '=', 'procesado')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_confirmado">
            <field name="name">Confirmados</field>
            <field name="sequence" eval="30"/>
            <field name="domain" eval="[('state', '=', 'confirmado')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_cancelado">
            <field name="name">Cancelados</field>
            <field name="sequence" eval="40"/>
            <field name="domain" eval="[('state', '=', 'cancelado')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_sustituido">
            <field name="name">Sustituidos</field>
            <field name="sequence" eval="45"/>
            <field name="domain" eval="[('state', '=', 'sustituido')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_liq_cia">
            <field name="name">Liq. Cia</field>
            <field name="sequence" eval="50"/>
            <field name="domain" eval="[('state', '=', 'liq_cia')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_liq_vendedor">
            <field name="name">Liq. Vendedor</field>
            <field name="sequence" eval="60"/>
            <field name="domain" eval="[('state', '=', 'liq_vendedor')]" pyson="1"/>
            <field name="count" eval="True"/>
            <field name="act_window" ref="act_pago_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                id="act_pago_form_domain_all">
            <field name="name">Todos</field>
            <field name="sequence" eval="9999"/>
            <field name="domain"></field>
            <field name="act_window" ref="act_pago_form"/>
        </record>

        <menuitem parent="menu_corseg_poliza" sequence="50"
            action="act_pago_form" id="menu_pago_tree"/>

        <record model="ir.model.access" id="access_pago">
            <field name="model" search="[('model', '=', 'corseg.poliza.pago')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_pago_admin">
            <field name="model" search="[('model', '=', 'corseg.poliza.pago')]"/>
            <field name="group" ref="group_corseg_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.model.button" id="pago_cancel_button">
            <field name="name">cancelar</field>
            <field name="model"
                search="[('model', '=', 'corseg.poliza.pago')]"/>
        </record>
        <record model="ir.model.button-res.group"
            id="pago_cancel_button_group_corseg_admin">
            <field name="button" ref="pago_cancel_button"/>
            <field name="group" ref="group_corseg_admin"/>
        </record>

        <record model="ir.model.button" id="pago_procesar_button">
            <field name="name">procesar</field>
            <field name="model"
                search="[('model', '=', 'corseg.poliza.pago')]"/>
        </record>
        <record model="ir.model.button-res.group"
            id="pago_procesar_button_group_corseg_admin">
            <field name="button" ref="pago_procesar_button"/>
            <field name="group" ref="group_corseg_admin"/>
        </record>

        <record model="ir.model.button" id="pago_confirmar_button">
            <field name="name">confirmar</field>
            <field name="model"
                search="[('model', '=', 'corseg.poliza.pago')]"/>
        </record>
        <record model="ir.model.button-res.group"
            id="pago_confirmar_button_group_corseg_admin">
            <field name="button" ref="pago_confirmar_button"/>
            <field name="group" ref="group_corseg_admin"/>
        </record>

        <record model="ir.model.button" id="pago_borrador_button">
            <field name="name">borrador</field>
            <field name="model"
                search="[('model', '=', 'corseg.poliza.pago')]"/>
